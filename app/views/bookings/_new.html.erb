<script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>



<div >
  <%= form_for  @booking do |f| %>

   <%= f.label :booking_date %><br>
   <%= f.text_field :booking_date, id: "date",type: "date", required: true%>

   <br>

   <%= f.label :booking_time %><br>
   <%= f.text_field :booking_time, class: "timepicker", value: Time.now.strftime("%I:%M %p"), required: true%>
   <br>

   <%= f.label :mentor_id %> <br>
   <%= f.hidden_field :mentor_id , value: @mentor_info.user.id %>

    <%= f.submit "Book"%>

  <% end %>
  </div>
  <script type="text/javascript">
  $('.timepicker').timepicker({
    timeFormat: 'h:mm p',
    interval: 30,
    minTime: '6',
    maxTime: '11:00pm',
    startTime: '6:00',
    dynamic: false,
    dropdown: true,
    scrollbar: true
  });
  </script>
