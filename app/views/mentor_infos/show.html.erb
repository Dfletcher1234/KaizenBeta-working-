<h1><%= @mentor.first_name%> <%= @mentor.last_name %></h1>
<p><%= image_tag @mentor.avatar.url (:medium) %>


<% if @mentor.mentor_info %>
  <h3>Summary:</h3> <%= @mentor.mentor_info.summary %><br>

<div class="mentorcats">
  <% @mentor.subcategories.each do |subcat| %>

    <%= subcat.name %><br>
  <% end %>
</div>
<% end %> <br>


    <% if @user.is_mentor  %>

      <% current_user.mentor_bookings.each do |apt| %>
      Student:<%= apt.student.first_name %> <%= apt.student.last_name %> <br>
      Email:<%= apt.student.email %>

      <div class="mentor_booking">



          <br>

    DATE: <%= apt.booking_date.strftime("%m/%d/%Y") %>
    TIME: <%= apt.booking_time.strftime("%I:%M%p") %>
    STATUS:
    <% if apt.status == true%> <p class="fixbutton"></p><span style="color: green" id="Confirmed<%= apt.id%>">CONFIRMED!</span></p>
    <% else %>
      <% apt.status %>
    <p><span style="color: red" > <%= "THIS BOOKING IS NOT CONFIRMED"%> </span></p>

    <button class="button" id="<%= apt.id%>">CONFIRM</button>

  <% end %>

    <br>

     </div>
    <%end%>
  <%end%>

  <%if @user.is_mentor == false %>
   <%= render 'bookings/new' %>
   <% else %>
   <%= puts "you can't book an appointment" %>
   <%end%>

  <%if @user.is_mentor == true %>
   <label class="switch", id="your_id">
   <input type="checkbox">
   <span class="slider round", id="circle"></span>
  </label>
  <%end%>
