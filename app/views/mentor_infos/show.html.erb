<h1><%= @mentor.first_name%> <%= @mentor.last_name %></h1>
<p><%= image_tag @mentor.avatar.url (:medium) %>
<div class="mentor-info-container">
<% if @mentor.mentor_info %>
  <h3>Summary:</h3> <%= @mentor.mentor_info.summary %><br>

<div class="mentorcats">
  <% @mentor.subcategories.each do |subcat| %>

    <%= subcat.name %><br>
  <% end %>
</div>
<% end %> <br>
</div>

<div class="student-details">

  <% if current_user.is_mentor  %>
    <%= render "mentor_bookings", bookings: current_user.mentor_bookings.unconfirmed %>
    <%= render "mentor_bookings", bookings: current_user.mentor_bookings.confirmed %>
  <%end%>

  <%if @user.is_mentor %>

    <label class="switch", id="your_id">
        <input type="checkbox"  <%= current_user.mentor_info.availability ? "checked": ""%>>
        <span class="slider round", id="circle"></span>
    </label>
  <% else %>
    <%= render 'bookings/new' %>
  <%end%>
</div>
