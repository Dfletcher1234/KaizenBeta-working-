<% bookings.each do |apt| %>
  Student:<%= apt.student.first_name %> <%= apt.student.last_name %>
  Email:<%= apt.student.email %>

  <div class="mentor_booking"><br>

    DATE: <%= apt.booking_date.strftime("%m/%d/%Y") %>
    TIME: <%= apt.booking_time.strftime("%I:%M%p") %>
    STATUS:
    <% if apt.status == true%>
      <p class="fixbutton">
        <span style="color: green" id="Confirmed<%= apt.id%>">CONFIRMED!</span>
      </p>
    <% else %>
      <% apt.status %>
      <p class="please-dissappear">
        <span style="color: red"><%= "THIS BOOKING IS NOT CONFIRMED"%></span>
      </p>
      <button class="button" id="<%= apt.id%>">CONFIRM</button>

    <% end %>
    <br>

  </div>
<%end%>
