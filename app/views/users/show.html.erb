<div class="alert alert-success">
  <strong class="welcome">Welcome <%= @user.first_name%>!</strong>
</div>
<%=  image_tag @user.avatar.url (:medium) %>
</p>
<hr>
<div class="container">
  <h2>Confirmed bookings</h2>
  <%if @user.student_bookings.pluck(:status).count(true) == 0%>
  <%='There are no confirmed bookings.'%>
  <%else%>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Mentor</th>
        <th>Date</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% @user.student_bookings.each do |apt| %>
        <%if apt.status == true %>
      <tr>
        <td><%=apt.mentor.first_name%></td>
        <td><%=apt.booking_date.strftime("%m/%d/%Y")%></td>
        <td><%=apt.booking_time.strftime("%I:%M%p")%></td>
      </tr>
    </tbody>
    <%end%>
    <%end%>
  </table>
  <%end%>
</div><br>




<div class="container">
  <h2>Pending bookings</h2>
  <%if @user.student_bookings.pluck(:status).count(false) == 0%>
  <%='There are no pending bookings.'%>
  <%else%>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Mentor</th>
        <th>Date</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% @user.student_bookings.each do |apt| %>
        <%if apt.status == false %>
      <tr>
        <td><%=apt.mentor.first_name%></td>
        <td><%=apt.booking_date.strftime("%m/%d/%Y")%></td>
        <td><%=apt.booking_time.strftime("%I:%M%p")%></td>
      </tr>
    </tbody>
    <%end%>
    <%end%>
  </table>
  <%end%>
</div>
