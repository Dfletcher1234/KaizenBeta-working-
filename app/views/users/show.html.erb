 <div class="info"><p>
<b>Name:</b> <%= @user.first_name%> <br>
<b>Email:</b> <%= @user.email %>
</p>
</div>
<p>
<%=  image_tag @user.avatar.url (:medium) %>
</p>
<p></p>
<div>
<% @user.student_bookings.each do |apt| %>
  <%if apt.status == true %>
    <li class="booking_confirmation">Confirmed! Mentor: <%=apt.mentor.first_name%> (Date: <%= apt.booking_date.strftime("%m/%d/%Y") %>, Time: <%= apt.booking_time.strftime("%I:%M%p") %> )
  <% end %>
<%end%><br>
<hr>
<% @user.student_bookings.each do |apt| %>
  <% if apt.status == false %>
   <li class="booking_confirmation">Pending! Mentor: <%=apt.mentor.first_name%> (Date: <%=apt.booking_date.strftime("%m/%d/%Y") %>, Time: <%= apt.booking_time.strftime("%I:%M%p")%>)
  <%end%>
<%end%>
<div><br>
