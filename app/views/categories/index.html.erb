
<% if logged_in? == false  %>
<div class="modal show" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          
          <h4 class="modal-title">Welcome to Kaizen</h4>
        </div>
        <div class="modal-body">
          <p>Find a mentor in your neighbourhood to teach you a new skill</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
<% end %>












<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<link href="https://fonts.googleapis.com/css?family=Baloo+Chettan" rel="stylesheet">
<link href=“https://fonts.googleapis.com/css?family=Comfortaa|Nosifer” rel=“stylesheet”>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">



    <div class="mentor_info">


      <div class="row cards">
        <div class="col-md-12 title">
          <h3>What do you want to learn?</h3>
        </div>
        <% @categories.each do |cat| %>

          <div class="card col-md-3">
         <p class="card-text">
           <div class="card-body">
            <% if logged_in? %>
              <h4 class="card-title"><%= link_to cat.name, category_path(cat.id)  %></h4>
            <% else %>
              <h4 class="card-title"><%= link_to cat.name, login_path  %></h4>
            <% end %>
           </div>
         </p>
       </div>
       <%end%>

       </div>
     </div>



    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100 max-size-image" src="https://static.pexels.com/photos/34627/pexels-photo.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 max-size-image" src="https://static.pexels.com/photos/102127/pexels-photo-102127.jpeg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 max-size-image" src="https://static.pexels.com/photos/357743/pexels-photo-357743.jpeg" alt="Third slide">
      </div>
    </div>

  </div>
