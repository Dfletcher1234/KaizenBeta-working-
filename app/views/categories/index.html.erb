

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<link href="https://fonts.googleapis.com/css?family=Baloo+Chettan" rel="stylesheet">
<link href=“https://fonts.googleapis.com/css?family=Comfortaa|Nosifer” rel=“stylesheet”>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">


    <div class="col title">
      <h3>What do you want to learn?</h3>
    </div>

    <div class="mentor_info">

      <div class="row cards">
        <% @categories.each do |cat| %>
          <div class="card col-md-3">
         <p class="card-text">
           <div class="card-body">
            <% if logged_in? %>
              <h4 class="card-title"><%= link_to cat.name, category_path(cat.id)  %></h4>
            <% else %>
              <h4 class="card-title"><%= link_to cat.name, login_path  %></h4>
            <% end %>
           </div>
         </p>
       </div>
       <%end%>

       </div>
     </div>

    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100 max-size-image" src="https://static.pexels.com/photos/34627/pexels-photo.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 max-size-image" src="https://static.pexels.com/photos/102127/pexels-photo-102127.jpeg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 max-size-image" src="https://static.pexels.com/photos/262918/pexels-photo-262918.jpeg" alt="Third slide">
      </div>
    </div>

  </div>
